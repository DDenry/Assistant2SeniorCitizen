<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_news_pic"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/common_ic_googleplayservices" />

    <TextView
        android:id="@+id/textView_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView_news_pic"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView_news_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_news_title"
        android:layout_toRightOf="@+id/imageView_news_pic" />

    <TextView
        android:id="@+id/textView_news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</RelativeLayout>